<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xelit3.Playground.MAUI.Pages.TodoList"
             Title="TodoList">

	<Grid RowDefinitions="100, Auto, *" ColumnDefinitions=".75*, .25*" Padding="10" RowSpacing="10" ColumnSpacing="10">

		<Image Grid.ColumnSpan="2" Source="dotnet_bot.png" />

		<Entry Grid.Row="1" Placeholder="Enter task" />

		<Button Grid.Row="1" Grid.Column="1" Text="Add" />

		<CollectionView Grid.Row="2" Grid.ColumnSpan="2">
			<CollectionView.ItemsSource>
				<x:Array Type="{x:Type x:String}">
					<x:String>Apples</x:String>
					<x:String>Bananas</x:String>
					<x:String>Oranges</x:String>
				</x:Array>
			</CollectionView.ItemsSource>
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<Grid Padding="0,5">
						<Frame>
							<Label Text="{Binding .}" FontSize="24" />
						</Frame>
					</Grid>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
		
	</Grid>
	
</ContentPage>